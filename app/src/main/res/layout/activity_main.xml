<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:ignore="MissingConstraints"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txt_title"
        android:text="Insert user's information:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/edt_name"
        android:hint="name"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_phone"
        android:hint="phone number"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spn_address"
        android:hint="address"
        app:layout_constraintTop_toBottomOf="@id/edt_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_add"
        android:text="ADD USER"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/spn_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_rec"
        android:text="Users List: "
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>